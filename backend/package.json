{
  "name": "backend",
  "scripts": {
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "build": "tsc",
    "dev": "wrangler --env=development dev",
    "test": "vitest",
    "predeploy": "npm run build",
    "deploy": "wrangler deploy",
    "db:migrations:create": "wrangler --env=development d1 migrations create hono-rpc-sample-backend-db-dev",
    "db:migrations:apply": "wrangler --env=development d1 migrations apply hono-rpc-sample-backend-db-dev",
    "gen:apispec": "tsx src/scripts/apispec.ts"
  },
  "dependencies": {
    "hono-openapi": "^0.4.6",
    "ulid": "^2.3.0",
    "zod": "^3.24.2",
    "zod-openapi": "^4.2.4"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.6.10",
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.4.2",
    "miniflare": "^3.20250124.1",
    "tsx": "^4.19.2"
  }
}